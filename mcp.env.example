# MCP Server Configurations
# Format: MCP_SERVER_<N>_<FIELD>=value

# First MCP Server
MCP_SERVER_1_NAME=Local Tools Server
MCP_SERVER_1_URL=http://localhost:8080
MCP_SERVER_1_AUTH_TYPE=api_key
MCP_SERVER_1_API_KEY=your_api_key_here
MCP_SERVER_1_DESCRIPTION=Local server providing file system and process tools

# Second MCP Server (Example)
MCP_SERVER_2_NAME=Cloud AI Server
MCP_SERVER_2_URL=https://ai-tools.example.com
MCP_SERVER_2_AUTH_TYPE=oauth
MCP_SERVER_2_CLIENT_ID=your_client_id_here
MCP_SERVER_2_CLIENT_SECRET=your_client_secret_here
MCP_SERVER_2_DESCRIPTION=Cloud-based AI and ML tools

# Add more servers as needed following the same pattern
# MCP_SERVER_3_NAME=...
